<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Introduce_Me" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 상단 액션 바, 그 아래 상태바의 색상 설정 (라일락) -->
        <item name="colorPrimary">@color/lilac</item>
        <item name="colorPrimaryDark">@color/lilac</item>
    </style>

    <!-- Theme.Introduce_Me -->
    <style name="Theme.Introduce_Me" parent="Base.Theme.Introduce_Me">
        <!-- 버튼 스타일 지정 -->
        <item name="android:buttonStyle">@style/WhiteTextButton</item>
    </style>

    <!-- WhiteTextButton -->
    <style name="WhiteTextButton" parent="Widget.AppCompat.Button">
        <!-- 버튼 글씨 색상 설정 (흰색) -->
        <item name="android:textColor">@color/white</item>
    </style>
</resources>